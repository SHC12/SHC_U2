<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".kabag.DetailCalonDebiturKabag">

        <include
            android:id="@+id/include4"
            layout="@layout/toolbar" />
        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Detail Calon Debitur"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include4" />

        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView13">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/table_header_cell_bg"
                android:gravity="left">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_header_cell_bg"
                    android:text="Kode Debitur"
                    android:id="@+id/tx_kode_debitur_detail_kabag"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:gravity="left">

                <TextView
                    android:layout_width="10dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Tanggal Pengajuan"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tanggalPengajuanDetailKabag"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Nama"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/namaDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="NIK"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/nikDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="File KTP"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/fileKtpDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="No.NPWP"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/noNpwpDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="File NPWP"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/fileNpwpDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Nomor Handphone"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/noHpDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="120dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:gravity="center_vertical"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Alamat"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/alamarDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Email"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/emailDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Nominal"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/nominalDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Tenor Bulan"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/tenorBulanDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Username"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/usernameDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Password"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:id="@+id/passwordDetailCalonDebiturKabag"
                    android:layout_width="220dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:gravity="left">

                <TextView
                    android:layout_width="150dp"
                    android:layout_height="match_parent"
                    android:layout_weight=".05"
                    android:background="@drawable/table_content_cell_bg"
                    android:text="Status"
                    android:textColor="@color/colorPrimary" />

                <Spinner
                    android:id="@+id/statusDetailCalonDebiturSpinner"
                    android:layout_width="220dp"
                    android:entries="@array/spinner_kabag"
                    android:layout_height="match_parent"
                    android:background="@drawable/table_content_cell_bg"
                    android:textColor="@color/colorPrimary" />
            </TableRow>
        </TableLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCalonDebiturKabag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Simpan"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>