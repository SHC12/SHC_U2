<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rv_item"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/txt_no_data_debitur"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:text="No"

        android:textSize="12sp" />
    <TextView
        android:id="@+id/txt_kode_debitur_data_debitur"
        android:layout_width="100dp"
        android:text="Kode Debitur"
        android:layout_toRightOf="@id/txt_no_data_debitur"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/txt_nama_data_debitur"
        android:layout_width="250dp"
        android:layout_toRightOf="@id/txt_kode_debitur_data_debitur"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:gravity="center_horizontal"
        android:text="Nama"
        android:textSize="12sp" />



</RelativeLayout>